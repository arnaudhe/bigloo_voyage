{% block pagetitle %}
	{{ trip.name }} 
    <h5> 
        <a href="{{ path('trip_update', {trip: trip.id}) }}">Edit</a>
        <a data-method="delete" href="{{ path('trip_delete', {trip: trip.id}) }}">Delete</a>
